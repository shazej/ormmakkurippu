{
    "name": "ormmakurippu-root",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "install:server": "cd server && npm install",
        "install:client": "cd client && npm install",
        "install:all": "npm install && npm run install:server && npm run install:client",
        "dev:api": "cd server && npm run dev",
        "dev:client": "cd client && npm run dev",
        "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
        "build": "cd client && npm run build",
        "test": "cd server && npm run test:integration",
        "reset:demo": "curl -X POST http://localhost:4000/api/admin/reset-demo -H \"Content-Type: application/json\" -d '{\"email\":\"owner@demo.local\"}'"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}